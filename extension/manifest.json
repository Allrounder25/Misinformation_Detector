
{
  "manifest_version": 3,
  "name": "Misinformation Detector",
  "version": "1.0",
  "description": "Detects misinformation using Gemini.",
  "permissions": [
    "activeTab",
    "contextMenus",
    "storage",
    "notifications"
  ],
  "host_permissions": [
    "http://localhost:8000/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Analyze Page"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "contentScript.js"
      ]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "sidebar.html"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}
